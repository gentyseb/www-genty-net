{
    "extends": [
        "tslint-config-airbnb",
        "tslint-sonarts",
        "angular-tslint-rules"
    ],
    "rulesDirectory": ["codelyzer"],
    "rules": {
        "arrow-parens": [true],
        "array-type": [true, "array"],
        "comma-dangle": ["error", "never"],
        "comment-format": [true, "check-space"],
        "component-selector": [false],
        "curly": [false],
        "quotemark": [true, "double"],
        "max-line-length": [true, 150],
        "member-access": [false],
        "newline-before-return": [false],
        "no-boolean-literal-compare": [true],
        "no-inferrable-types": [false],
        "no-null-keyword": [false],
        "no-unused-css": [false],
        "ter-arrow-parens": [false],
        "ter-indent": [true, 4],
        "trailing-comma": [false],
        "typedef": [true, "call-signature", "arrow-parameter", "parameter", "property-declaration"],
        "prefer-conditional-expression": [true],
        "completed-docs": [
            true,
            {
            "classes": { "visibilities": ["all"] },
            "functions": { "visibilities": ["all"] },
            "methods": {"locations": ["all"], "privacies": ["all"]},
            "properties": {"locations": ["all"], "privacies": ["all"]}
            }
        ]
    }
}
